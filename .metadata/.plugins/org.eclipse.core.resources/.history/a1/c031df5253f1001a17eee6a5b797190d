package IO.test;

import java.io.File;
import java.io.FileWriter;
import java.io.IOException;

public class FileWriterReaderTest {
	
	public static void main(String[] args) {
		
		File file = new File("C:\\projeto_java\\exercicios\\src\\arquivo.txt");
		
		try {
			FileWriter fw = new FileWriter(file); //Criando o obj para escrever no arq
			fw.write("Escrevendo uma mensagem no arquivo.\nE pulando uma linha!!");
		} catch(IOException e) {
			e.printStackTrace();
		}
	}

}
