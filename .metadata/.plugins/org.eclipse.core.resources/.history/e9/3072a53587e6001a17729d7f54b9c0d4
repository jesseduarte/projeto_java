package classe;

public class ProdutoTeste {
	
	public static void main(String[] args) {
		Produto p1 = new Produto("Notebook");
		//p1.nome = "Notebook";
		p1.preco = 4300.67;
		p1.desconto = 0.25;
		var p2 = new Produto("Caneta");
		//p2.nome = "Caneta";
		p2.preco = 12.56;
		p2.desconto = 0.29;
		
		Double precofinal1 = p1.precoComDesconto(0.2);
		Double precofinal2 = p2.precoComDesconto(); 
		Double total = precofinal1 + precofinal2;
		
		System.out.println(p1.nome);
		System.out.println("Preço total do Notebook: " + precofinal1);
		System.out.println(p2.nome);
		System.out.println("Preço total da Caneta: " + precofinal2);
		System.out.println("Total Carrinho: " + total);
		
	}

}
