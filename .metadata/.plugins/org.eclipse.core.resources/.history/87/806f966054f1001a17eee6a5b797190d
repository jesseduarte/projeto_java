package IO.test;

import java.io.File;
import java.io.FileWriter;
import java.io.IOException;

public class FileWriterReaderTest {
	
	public static void main(String[] args) {
		
		File file = new File("C:\\projeto_java\\exercicios\\src\\arquivo.txt");
		
		try {
			FileWriter fw = new FileWriter(file); //Criando o obj para escrever no arq
			fw.write("Escrevendo uma mensagem no arquivo.\nE pulando uma linha!!"); //Escreve no arquivo
			fw.flush(); //Escrevemos nesse tunel chamado Stream (sao varios bytes). a funcao flush() ela joga tudo dentro do Stream para o meu arquivo!!
			fw.close();
		} catch(IOException e) {
			e.printStackTrace();
		}
	}
}
